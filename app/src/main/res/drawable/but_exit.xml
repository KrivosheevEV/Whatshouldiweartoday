<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="@color/_myColor_5" android:endColor="@color/_myColor_5"/>
            <corners android:radius="45dp"/>
            <stroke android:width="1dp" android:color="@color/_myColor_5"/>
            <padding android:top="10dp" android:bottom="10dp" android:left="10dp" android:right="10dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/_myColor_5" android:endColor="@color/_myColor_5"/>
            <corners android:radius="45dp"/>
            <stroke android:width="1dp" android:color="@color/_myColor_5"/>
            <padding android:top="10dp" android:bottom="10dp" android:left="10dp" android:right="10dp"/>
        </shape>
    </item>

</selector>